#dans ce code, on va retraduire le mot pour ton animal prefere en majuscule                                                                                                                                                    

class StringFoo:
 def __init__(self, message, set_string):
   self.message = str(input("C'est quoi ton animal préféré ? "))
   self.set_string = ""
 def __str__(self):
   return f"{self.message}({self.set_string})"


p1 = StringFoo("", "" )

print(p1.message.upper())
